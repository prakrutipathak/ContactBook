@model Contact
<h1>Delete Contact</h1>
<div>
    <h4>Are you sure you want to delete this contact?</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>

        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>

    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ContactId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index">Back to List</a>
        </div>

    </form>
</div>