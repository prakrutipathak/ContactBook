@using ClientApplicationContactBook.ViewModels
@model LoginViewModel

<!DOCTYPE html>
<html>
<head>

    <style>
        .login-container {
            max-width: 400px; /* Set max width for the container */
            margin: 0 auto; /* Center the container horizontally */
            background-color: #ffffff; /* Set background color for the container */
            padding: 20px; /* Add padding */
            border-radius: 5px; /* Add border radius */
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1); /* Add shadow */
        }

        .form-group {
            margin-bottom: 20px; /* Add margin between form groups */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-container">
            <h1 class="text-center mb-4">Login</h1>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="Username">Username</label>
                    <input asp-for="Username" id="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input asp-for="Password" type="password" id="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
                <div class="text-center">
                    <a asp-action="ForgotPassword" class="link-primary">Forgot Password?</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
