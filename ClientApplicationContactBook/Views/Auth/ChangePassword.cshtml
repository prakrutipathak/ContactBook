@using ClientApplicationContactBook.ViewModels

@model ForgetViewModel
<!DOCTYPE html>
<html>
<head>

    <style>
        .login-container {
            max-width: 400px; /* Set max width for the container */
            margin: 0 auto; /* Center the container horizontally */
            background-color: #ffffff; /* Set background color for the container */
            padding: 20px; /* Add padding */
            border-radius: 5px; /* Add border radius */
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1); /* Add shadow */
        }

        .form-group {
            margin-bottom: 20px; /* Add margin between form groups */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-container">
            <h1 class="text-center mb-4">Change Password</h1>

            <form asp-action="ChangePassword" method="post" novalidate>
                <input asp-for="UserName" type="hidden" class="form-control" />
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">New Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your new password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your new password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <input type="submit" value="Reset Password" class="btn btn-primary" />
                </div>
            </form>

        </div>
</body>
</html>
