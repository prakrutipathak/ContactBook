@{
    Layout = "_Layoutwithoutnavbar";
}
@using ClientApplicationContactBook.ViewModels
@model ContactViewModel

<div class="container ">
    <div class="row">
        <div class="col">
            <div class="border rounded p-4 shadow bg-dark text-light">
                <div class="text-center mb-4">
                    @if (Model.Image != string.Empty)
                    {
                        <img src="@Url.Content("~/Uploads/"+@Model.Image)" alt="image" height="100" width="100" class="img-fluid rounded-circle" />
                    }
                    else
                    {
                        <img src="@Url.Content("~/Uploads/Defaultimage.png")" height="100" width="100" class="img-fluid rounded-circle" />
                    }
                    @* <img src="@Url.Content("~/Uploads/"+@Model.Image)" alt="image" height="100" width="100" class="img-fluid rounded-circle" /> *@
                    <h5 class="mt-3">@Model.FirstName @Model.LastName</h5>
                </div>
                <hr>
                <dl class="row">
                    <dt class="col-sm-4">Number: </dt>
                    <dd class="col-sm-8">@Model.ContactNumber</dd>
                    <dt class="col-sm-4">Birth date: </dt>
                    <dd class="col-sm-8">@String.Format("{0:dd/MM/yyyy}", Model.BirthDate)</dd>
                    <dt class="col-sm-4">Gender: </dt>
                    <dd class="col-sm-8">
                        @{
                            if (Model.Gender == "F")
                            {
                                <text>Female</text>
                            }
                            else
                            {
                                <text>Male</text>
                            }
                        }
                    </dd>

                    <dt class="col-sm-6">Country Name: </dt>
                    <dd class="col-sm-6">@Model.Country.CountryName</dd>
                    <dt class="col-sm-6">State Name: </dt>
                    <dd class="col-sm-6">@Model.State.StateName</dd>
                    <dt class="col-sm-4">Email: </dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                    <dt class="col-sm-4">Address: </dt>
                    <dd class="col-sm-8">@Model.Address</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
