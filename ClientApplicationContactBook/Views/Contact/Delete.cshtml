@using ClientApplicationContactBook.ViewModels
@model ContactViewModel

<!DOCTYPE html>
<html lang="en">
<head>
 
    <style> 
        .container {
            max-width: 600px;
            margin: 0 auto;
        }

        .card {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .btn-danger {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <h1 class="text-center">Delete Contact</h1>
            <div>
                <h4>Are you sure you want to delete this contact?</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-6">First Name</dt>
                    <dd class="col-sm-6">@Model.FirstName</dd>
                    <dt class="col-sm-6">Last Name</dt>
                    <dd class="col-sm-6">@Model.LastName</dd>
                    <dt class="col-sm-6">Email</dt>
                    <dd class="col-sm-6">@Model.Email</dd>
                    <dt class="col-sm-6">Address</dt>
                    <dd class="col-sm-6">@Model.Address</dd>
                </dl>
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="ContactId" />
                    <div class="form-group text-center">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index1" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
